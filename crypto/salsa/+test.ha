@test fn qr() void = {
	let s: [4]u32 = [0xe7e8c006, 0xc4f9417d, 0x6479b4b2, 0x68c67137];
	qr(&s[0], &s[1], &s[2], &s[3]);
	assert(s[0] == 0xe876d72b);
	assert(s[1] == 0x9361dfd5);
	assert(s[2] == 0xf1460244);
	assert(s[3] == 0x948541a3);
};

