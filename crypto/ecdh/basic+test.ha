	assert(bytes::equal(dpub, pub));

	let dshared: [P256_SHAREDSZ]u8 = [0...];
	let zero: [P256_SHAREDSZ]u8 = [0...];

	assert(derive(dshared, &priv, otherpub) is invalidkey);
